<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/fondo_cardview_resenas">


        <TextView
            android:id="@+id/TxtNombre_Recycler_Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/convergence"
            android:text="Nombre pedido"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Imagen_Recycler_Color" />

        <TextView
            android:id="@+id/TxtFecha_Recycler_Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/convergence"
            android:text="10/12/2020"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/TxtNombre_Recycler_Pedido"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/TxtDescripcion_Recycler_Pedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="110dp"
            android:fontFamily="@font/convergence"
            android:singleLine="false"
            android:text="Detalle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/TxtNombre_Recycler_Pedido"
            app:layout_constraintTop_toBottomOf="@+id/TxtNombre_Recycler_Pedido"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/Imagen_Recycler_Color"
            android:layout_width="400dp"
            android:layout_height="5dp"
            android:layout_marginTop="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TxtPrecio_Recycler_Pedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/convergence"
            android:singleLine="false"
            android:text="S/.180"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TxtFecha_Recycler_Pedido" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>